@model Category
@{
    ViewData["Title"] = "Add";

}

<h1>Add New Category</h1>
<br />
<br />

<div class="row">
    <div class="col-6">
        <form asp-action="Create" asp-controller="Category">
            <div class="form-group">
                @*   <label asp-for="@Model.Title" class="col-form-label"></label>*@
                <ejs-textbox id="title" ejs-for="Title" placeholder="Title" floatLabelType="Always"></ejs-textbox>
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <ejs-textbox id="icon" ejs-for="Icon" placeholder="Icon"  floatLabelType="Always"></ejs-textbox>
                <span asp-validation-for="@Model.Icon" class="text-danger"></span>
            </div>

            <div class="form-group">
               @* <label asp-for="@Model.Type" class="col-form-label"></label>*@
                <ejs-textbox id="type" ejs-for="Type" placeholder="Type" floatLabelType="Always"></ejs-textbox>
                <span asp-validation-for="@Model.Type" class="text-danger"></span>
            </div>
            <br />
            <input type="submit" value="Add" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>

@section Scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



